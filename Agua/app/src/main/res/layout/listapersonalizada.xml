<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_garrafapct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_Garrafao10L"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/txt_Garrafao10L"
        android:layout_marginTop="14dp"
        android:text="Qnt Garrafa PCT"
        android:textAlignment="textStart"
        android:textColor="@color/primary_text" />

    <TextView
        android:id="@+id/txt_Garrafao10L"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txt_garrafapct"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="14dp"
        android:text="Qnt. Garrafão 10L"
        android:textAlignment="textStart"
        android:textColor="@color/primary_text" />

    <TextView
        android:id="@+id/txt_Garrafao20L"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_Garrafao10L"
        android:layout_alignStart="@+id/txt_Garrafao10L"
        android:layout_below="@+id/txt_Garrafao10L"
        android:layout_marginTop="14dp"
        android:text="Qnt. Garrafão 20L"
        android:textAlignment="textStart"
        android:textColor="@color/primary_text" />

    <TextView
        android:id="@+id/txt_DataeHorario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txt_Garrafao10L"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:text="Data e Horário do Pedido"
        android:textAlignment="textStart"
        android:textColor="@color/primary_text" />

    <TextView
        android:id="@+id/txt_ValorTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txt_Garrafao10L"
        android:layout_alignBottom="@+id/txt_Garrafao10L"
        android:layout_alignEnd="@+id/txt_DataeHorario"
        android:layout_alignRight="@+id/txt_DataeHorario"
        android:text="Valor Total do Pedido"
        android:textAlignment="textStart"
        android:textColor="@color/primary_text" />

    <TextView
        android:id="@+id/txt_StatusPedido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txt_Garrafao20L"
        android:layout_alignBottom="@+id/txt_Garrafao20L"
        android:layout_alignEnd="@+id/txt_ValorTotal"
        android:layout_alignRight="@+id/txt_ValorTotal"
        android:text="Status do Pedido"
        android:textAlignment="textStart"
        android:textColor="@color/primary_text" />
</RelativeLayout>